{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@org/app": [
        "./packages/app/build/esm/index.js"
      ],
      "@org/app/test/*": [
        "./packages/app/build/test/*"
      ],
      "@org/app/*": [
        "./packages/app/build/esm/*"
      ],
      "@org/modification": [
        "./packages/modification/build/esm/index.js"
      ],
      "@org/modification/test/*": [
        "./packages/modification/build/test/*"
      ],
      "@org/modification/*": [
        "./packages/modification/build/esm/*"
      ]
    }
  },
  "include": [
    "./packages/app/build/esm/**/*.js",
    "./packages/app/build/test/**/*.js"
  ]
}
